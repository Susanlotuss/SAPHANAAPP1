{
  "name": "HANAAPP1",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.24.0",
    "@sap-cloud-sdk/http-client": "^3.24.0",
    "@sap-cloud-sdk/resilience": "^3.24.0",
    "@sap/cds": "^8.6.0",
    "@sap/cds-common-content": "^2.1.0",
    "@sap/xssec": "^4",
    "axios": "^1.7.9",
    "express": "^4",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8.6.1"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-videogame_catalog": "cds watch --open videogame_catalog/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project1.2": "cds watch --open project1.2/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "fiori": {
      "preview": true
    },
    "server": {
      "index": true
    },
    "requires": {
      "auth": "xsuaa",
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "hanaapp_destination",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/videogame_catalog",
    "app/project1.2"
  ]
}
